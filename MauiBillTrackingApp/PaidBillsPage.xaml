<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBillTrackingApp.PaidBillsPage"
             Title="Maksetut laskut">

    <VerticalStackLayout>
        <Label Text="Maksetut laskut" FontSize="24" HorizontalOptions="Center" />
        <ListView x:Name="PaidList" Margin="20">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Lähettäjä}" Detail="{Binding Summa}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>